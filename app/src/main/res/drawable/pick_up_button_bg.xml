<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/dividerColor">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:width="0.02dp"
                android:color="@color/white"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_1e222a" />
            <size
                android:width="@dimen/_90sdp"
                android:height="@dimen/_35sdp" />
            <corners android:radius="@dimen/_20sdp" />

            <stroke android:width="0.02dp"
                android:color="@color/color_1e222a"/>
        </shape>
    </item>
</ripple>
