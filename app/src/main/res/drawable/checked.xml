<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_4sdp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray_9e9e9e" />
                    <gradient
                        android:startColor="@color/gray_9e9e9e"
                        android:centerColor="@color/gray_9e9e9e"
                        android:endColor="@color/gray_9e9e9e"
                        android:angle="270" />
                    <size
                        android:width="@dimen/_30sdp"
                        android:height="@dimen/_30sdp" />
                </shape>
            </item>

            <item
                android:width="@dimen/_8sdp"
                android:height="@dimen/_2sdp"
                android:top="@dimen/_20sdp"
                android:left="@dimen/_6sdp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="@dimen/_19sdp"
                android:height="@dimen/_2sdp"
                android:top="@dimen/_16sdp"
                android:left="@dimen/_9sdp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>