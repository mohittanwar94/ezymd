<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">


    <com.ezymd.restaurantapp.customviews.RoundedImageView
        android:id="@+id/ivNotesThumb"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="centerCrop"
        app:corner_radius="@dimen/_7sdp" />

    <com.ezymd.restaurantapp.customviews.SnapTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/ivNotesThumb"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/_5sdp"
        android:text="@string/pizza"
        android:textColor="@color/gray_514f4f"
        android:textSize="@dimen/_13sdp"
        app:textFont="medium" />


    <com.ezymd.restaurantapp.customviews.SnapTextView
        android:id="@+id/foodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/ivNotesThumb"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/_5sdp"
        android:text="@string/pizza"
        android:textColor="@color/gray_9e9e9e"
        android:textSize="@dimen/_10sdp"
        app:textFont="book" />

    <com.ezymd.restaurantapp.customviews.SnapTextView
        android:id="@+id/discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_below="@+id/foodType"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/ivNotesThumb"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/_5sdp"
        android:text="@string/pizza"
        android:textColor="@color/gray_676766"
        android:textSize="@dimen/_10sdp"
        app:textFont="book" />


    <com.ezymd.restaurantapp.customviews.SnapTextView
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_below="@+id/discount"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/ivNotesThumb"
        android:text="@string/pizza"
        android:textColor="@color/gray_9e9e9e"
        android:textSize="@dimen/_10sdp"
        app:textFont="book" />



    </RelativeLayout>