<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/CollapsingToolbarCollapse"
            app:expandedTitleMarginStart="@dimen/_15sdp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarExpanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true"
            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/CustomToolBarStyle" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp">

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="1"
                    android:text="@string/orderID"
                    android:textColor="@color/blue_667ba3"
                    android:textSize="@dimen/_10sdp"
                    app:textFont="roman" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="1"
                    android:text="@string/order_status"
                    android:textColor="@color/blue_667ba3"
                    android:textSize="@dimen/_10sdp"
                    app:textFont="roman" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp">


                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/pizza"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_12sdp"
                    app:textFont="medium" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/completed"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_12sdp"
                    app:textFont="medium" />
            </LinearLayout>

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/resurant_name"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:singleLine="true"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_12sdp"
                app:textFont="medium" />


            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/payment_id"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/paymentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:maxLines="2"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_12sdp"
                app:textFont="roman" />


            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/delivery_instruction"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/deliveryInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_12sdp"
                app:textFont="roman" />
            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/address"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_12sdp"
                app:textFont="roman" />


            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/scheduleAt"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />

            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/scheduleAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_12sdp"
                app:textFont="roman" />


            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/created"
                android:textColor="@color/blue_667ba3"
                android:textSize="@dimen/_10sdp"
                app:textFont="roman" />


            <com.ezymd.restaurantapp.customviews.SnapTextView
                android:id="@+id/created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:letterSpacing="0.01"
                android:maxLines="2"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="@string/pizza"
                android:textColor="@color/color_002366"
                android:textSize="@dimen/_11sdp"
                app:textFont="roman" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/dividerColor" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resturantRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/color_f2f4f7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.02"
                    android:text="@string/subtotal"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="medium" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:letterSpacing="0.02"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="medium" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.02"
                    android:text="Service charges"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:textFont="roman" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/serviceCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:letterSpacing="0.02"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="roman" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/progressBarTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.02"
                    android:text="Delivery charge"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:textFont="roman" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/shippingCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:letterSpacing="0.02"
                    android:text="FREE"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="roman" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@color/color_f2f4f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.02"
                    android:text="@string/total"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="bold" />

                <com.ezymd.restaurantapp.customviews.SnapTextView
                    android:id="@+id/totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:letterSpacing="0.02"
                    android:textColor="@color/color_002366"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"
                    app:textFont="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_45sdp"
                android:background="@color/color_f2f4f7" />


            <com.ezymd.restaurantapp.customviews.SnapButton
                android:id="@+id/trackOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/ic_gray_btn_pressed"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="5sp"
                android:text="@string/track_order"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                app:buttonFont="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>